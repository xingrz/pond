{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "node",
      "jest",
    ],
    "lib": [
      "esnext",
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
}
