{
  "name": "pond",
  "version": "1.0.2",
  "description": "Collect a stream into a buffer.",
  "main": "index.js",
  "scripts": {
    "build": "babel es -d lib",
    "clean": "rm -rf lib",
    "prepublish": "npm run build",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha",
    "test:ci": "cross-env NODE_ENV=test nyc --reporter=text mocha --reporter=tap",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "debug": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "should": "^13.1.0"
  },
  "homepage": "https://github.com/xingrz/pond",
  "repository": {
    "type": "git",
    "url": "git://github.com/xingrz/pond.git"
  },
  "bugs": {
    "url": "https://github.com/xingrz/pond/issues"
  },
  "keywords": [
    "stream",
    "buffer"
  ],
  "engines": {
    "node": ">= 4"
  },
  "author": "XiNGRZ <chenxingyu92@gmail.com>",
  "license": "MIT"
}
